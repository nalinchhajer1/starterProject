{
    "name": "state-core",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/state-core",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/state-core",
                "main": "packages/state-core/types.ts",
                "tsConfig": "packages/state-core/tsconfig.lib.json",
                "assets": ["packages/state-core/*.md"]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/state-core/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/state-core/jest.config.js",
                "passWithNoTests": true
            }
        }
    },
    "tags": ["layer:state", "scope:shared"]
}
