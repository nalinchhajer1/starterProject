{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "lib": ["es2015", "dom", "dom.iterable"],
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "types": ["react"],
        "strict": true,
        "moduleResolution": "bundler"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
