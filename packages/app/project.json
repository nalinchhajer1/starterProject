{
    "name": "app",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/app",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/app",
                "main": "packages/app/index.ts",
                "tsConfig": "packages/app/tsconfig.lib.json",
                "assets": ["packages/app/*.md"]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/app/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "jest.config.base.js",
                "passWithNoTests": true
            }
        }
    },
    "tags": ["type:app", "scope:shared"]
}
