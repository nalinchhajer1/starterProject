{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "lib": ["es2015", "dom", "dom.iterable"],
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "types": ["../../packages/types"]
        },
        "types": ["react"]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
