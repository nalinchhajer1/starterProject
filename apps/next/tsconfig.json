{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": ["node", "react"],
        "baseUrl": ".",
        "paths": {
            "app/*": ["../../packages/app/*"],
            "navigation/*": ["../../packages/navigation/*"],
            "navigation-types/*": ["../../packages/navigation-types/*"],
            "navigation-ports/*": ["../../packages/navigation-ports/*"],
            "features-registry/*": ["../../packages/features-registry/*"],
            "state-core/*": ["../../packages/state-core/*"],
            "ui/*": ["../../packages/ui/*"],
            "utils/*": ["../../packages/utils/*"],
            "native/*": ["../../packages/native/*"],
            "native-library/*": ["../../packages/native-library/*"],
            "firebase/*": ["../../packages/firebase/*"],
            "features/*": ["../../packages/features/*"]
        }
    },
    "include": ["next-env.d.ts", "app-env.d.ts", "**/*.ts", "**/*.tsx", "next.config.js", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
